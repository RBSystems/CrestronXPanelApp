<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient
				android:angle="90"
				android:type="linear"
				android:startColor="#4747e0"
				android:centerColor="#5b5bcd"
				android:endColor="#6f6fcf" />
			<stroke
				android:width="2dp"
				android:color="#868E96" />
			<corners android:radius="5dp" />
			<padding
				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#E8EBF3"
				android:centerColor="#E4E8F3"
				android:endColor="#D3D9E7"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="#A4A7AF" />
			<corners android:radius="6dp" />
			<padding
				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>
</selector>