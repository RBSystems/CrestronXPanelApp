<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#7298F2"
                android:endColor="#234187"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#868E96" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#919191"
                android:endColor="#686869"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#868E96" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>